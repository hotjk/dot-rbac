@model Settings.Web.Models.LoginVM
@{
    ViewBag.Title = "Login";
    ViewBag.RequireJsMain = new string[] { "jquery", "jqueryval" };
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
{
    @Html.Partial("Message")
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(x => x.Username, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                <span class="help-block">@Html.ValidationMessageFor(x => x.Username)</span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                <span class="help-block">@Html.ValidationMessageFor(x => x.Password)</span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Captcha, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.PasswordFor(x => x.Captcha, new { @class = "form-control pull-left", style = "width:100px" })
                <img src='@Url.Action("Captcha")' class="pull-left" />
                <span class="help-block" style="clear:both">@Html.ValidationMessageFor(x => x.Captcha)</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Login</button>
            </div>
        </div>
    </div>
}
