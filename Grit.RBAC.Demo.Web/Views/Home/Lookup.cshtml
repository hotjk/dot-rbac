@{
    ViewBag.Title = "Lookup";
    ViewBag.RequireJsBundles = new string[] { "jstree-lookup-js" };
}
@using Grit.Utility.Web.Json
<h2>@ViewBag.Title</h2>
@section styles {
<style>
    .lookup_container .form-control {
        margin-bottom: 10px;
    }
    .js-lookup {
        display:none;
    }
</style>
}
@section scripts {
    <script>
        require(['jquery', 'bootstrap', 'jstree-lookup-js'],
        function ($, bootstrap, lookup) {
            $(document).ready(function () {
                lookup.AddTree(@Html.Json(@ViewBag.Tree as object));
                lookup.BindLookup($('#demo1'), 8, true);
                lookup.BindLookup($('#demo2'), 8);
                lookup.BindLookup($('#demo3'), 8, true, true);
                lookup.BindLookup($('#demo10'), 8, false, true);
                lookup.BindFlatLookup($('#demo6'), 8);

                $('#demo1').bind('blur', function () {
                    $('#demo1_label').text($(this).val());
                }).blur();
                $('#demo2').bind('blur', function () {
                    $('#demo2_label').text($(this).val());
                }).blur();
                $('#demo3').bind('blur', function () {
                    $('#demo3_label').text($(this).val());
                }).blur();
                $('#demo10').bind('blur', function () {
                    $('#demo10_label').text($(this).val());
                }).blur();
            });
        });
    </script>
}
<form class="form-horizontal">
    <div class="row">
        <div class="form-group">
            <label class="col-sm-2 control-label">
                只能选择叶子节点
                <span id="demo1_label"></span>
            </label>
            <div class="col-sm-4">
                <input type="text" class="js-lookup" value="4" id="demo1" />
            </div>
        </div>

        <hr />
        <div class="form-group">
            <label class="col-sm-2 control-label">
                可以选择分支节点
                <span id="demo2_label"></span>
            </label>
            <div class="col-sm-4">
                <input type="text" class="js-lookup" value="7" id="demo2" />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="col-sm-2 control-label">
                隐藏未使用的控件（只能选择叶子节点）
                <span id="demo3_label"></span>
            </label>
            <div class="col-sm-4">
                <input type="text" class="js-lookup" value="9" id="demo3" />
            </div>
        </div>

        <hr />
        <div class="form-group">
            <label class="col-sm-2 control-label">
                隐藏未使用的控件（可以选择分支节点）
                <span id="demo10_label"></span>
            </label>
            <div class="col-sm-4">
                <input type="text" class="js-lookup" value="9" id="demo10" />
            </div>
        </div>

        <hr />
        <div class="form-group">
            <label class="col-sm-2 control-label">
                平面化下拉列表
            </label>
            <div class="col-sm-4">
                <input type="text" class="js-flot-lookup form-control" value="9" id="demo6" />
            </div>
        </div>
        <hr />
    </div>
</form>